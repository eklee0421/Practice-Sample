<UserControl x:Class="WpfKeypad.View.NumText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfKeypad.View"
             mc:Ignorable="d" 
             Height="200" Width="189"
             x:Name="ctrlText">

    <Grid>
        <Border BorderBrush="#d3d3d3" BorderThickness="3" Margin="5,0,0,0">
            <TextBlock x:Name="label" Text="{Binding InputString, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        </Border>
    </Grid>
</UserControl>