<Window x:Class="WpfKeypad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKeypad" 
        xmlns:view="clr-namespace:WpfKeypad.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="275" Width="225">
    <Grid>

        <view:numPad x:Name="ctrlPad" HorizontalAlignment="Left" Height="200" Margin="5,40,5,5" VerticalAlignment="Top" Width="200"/>
        
        <view:NumText x:Name="ctrlText" HorizontalAlignment="Left" Height="35" Margin="0,0,0,0" VerticalAlignment="Top" Width="205"/>
    </Grid>
</Window>
