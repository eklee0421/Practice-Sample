<Window x:Class="wpfProductApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfProductApp"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:wpfProductApp.View"
        Title="MainWindow" Height="450" Width="515">
    <StackPanel>
    <Grid>

        <view:SetProduct x:Name="mainSet" HorizontalAlignment="Left" VerticalAlignment="Top" Height="210" Width="250"/>
        <view:totalPrice x:Name="mainTotal" HorizontalAlignment="Right" VerticalAlignment="Top" Height="210" Width="250"/>

        </Grid>
    <view:ProductList x:Name="mainList" HorizontalAlignment="Left" VerticalAlignment="Top" Height="210" Width="500"/>
    </StackPanel>
</Window>